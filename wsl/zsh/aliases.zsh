# Text Editors & Files 
alias v="nvim"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias oc="opencode"
alias ls='eza'
alias ll='eza -la'
alias lt='eza --tree --level=2'
alias top='btm'
alias lg='lazygit'
alias cat='bat --paging=never'
alias mkcd='function _mkcd() { mkdir -p "$1" && cd "$1" }; _mkcd'
alias vswap="rm -rf ~/.local/state/nvim/swap/"
